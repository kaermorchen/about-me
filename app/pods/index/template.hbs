<div class="row section">
  <div class="col-4">
    <h2>Skills</h2>
    <p>{{model.skills.description}}</p>
  </div>

  {{#each-in model.skills.data as |scopeName scope|}}
    <div class="col-4">
      <h3 class="pt-1">{{scopeName}}</h3>
      <p class="mb-0">
        {{#each-in scope as |skillName skills|}}
          {{skillName}}:
          {{#each skills as |skill index|}}{{if index ", "}}{{skill}}{{/each}}
          <br>
        {{/each-in}}
      </p>
    </div>
  {{/each-in}}
</div>

<div class="row section">
  <div class="col-4">
    <h2>Education</h2>
    <p>{{model.education.description}}</p>
  </div>

  <div class="col-8">
    {{#each model.education.data as |item|}}
      {{cv-item item=item}}
    {{/each}}
  </div>
</div>

<div class="row section">
  <div class="col-4">
    <h2>Experience</h2>
    <p>{{model.experience.description}}</p>
  </div>

  <div class="col-8">
    {{#each model.experience.data as |item|}}
      {{cv-item item=item}}
    {{/each}}
  </div>
</div>

<div class="section">
  <h2>Portfolio</h2>

  <div class="row">
    {{#each projects as |project|}}
      {{project-preview project=project class="col-4 mb-3"}}
    {{/each}}
  </div>
</div>
